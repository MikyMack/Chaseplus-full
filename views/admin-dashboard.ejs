                                                    <label>Change Image</label>
                                                    <input type="file" name="image" accept="image/*">
                                                </div>
                                                <div class="form-group">
                                                    <label>Price</label>
                                                    <input type="number" name="price" id="editPrice" required min="0"
                                                        step="0.01">
                                                </div>
